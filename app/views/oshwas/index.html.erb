<h1>Display API Call: OSHWA Certified Projects</h1>

<% if @oshwas.present? %>
  <%= will_paginate @oshwas %>

  <div class="grid">
    <% @oshwas.each do |oshwa| %>
      <div class="grid-item">
        <h3><%= oshwa.project_name %></h3>
        <p><%= oshwa.additional_type %>
        <p><%= oshwa.project_description %></p>
      </div>
    <% end %>
  </div>

  <%= will_paginate @oshwas %>

<% else %>
  <p>No OSHWA projects found.</p>
<% end %>

<style>
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 16px;
  }
  .grid-item {
    padding: 16px;
    background-color: #f9f9f9;
    border: 1px solid #ddd;
    border-radius: 8px;
  }
</style>